/* 响应式适配 */
@media (min-width: 768rpx) {
  .control-card,
  .status-card {
    padding: 40rpx;
  }
  
  .control-item {
    margin-bottom: 50rpx;
  }
  
  .control-label text,
  .control-label .control-value,
  .control-label .control-status {
    font-size: 30rpx;
  }
  
  .control-input {
    width: 140rpx;
    height: 70rpx;
    font-size: 30rpx;
  }
  
  /* 大屏幕下的新输入组样式 */
  .control-input-new {
    height: 90rpx;
    font-size: 36rpx;
    min-width: 140rpx;
    max-width: 220rpx;
  }
  
  .control-btn-small {
    width: 90rpx;
    height: 90rpx;
    font-size: 44rpx;
  }
  
  .control-buttons {
    margin-top: 50rpx;
  }
  
  .control-btn {
    font-size: 30rpx;
    padding: 25rpx 0;
  }
  
  .status-row {
    margin-bottom: 25rpx;
    padding: 15rpx 0;
  }
  
  .status-label {
    font-size: 30rpx;
    width: 200rpx;
  }
  
  .status-value {
    font-size: 30rpx;
  }
}
@media (max-width: 480rpx) {
  .control-card,
  .status-card {
    padding: 20rpx;
  }
  
  .control-item {
    margin-bottom: 30rpx;
  }
  
  .control-label text,
  .control-label .control-value,
  .control-label .control-status {
    font-size: 24rpx;
  }
  
  .control-input {
    width: 100rpx;
    height: 50rpx;
    font-size: 24rpx;
  }
  
  /* 小屏幕下的新输入组样式 */
  .input-group {
    gap: 15rpx;
  }
  
  .control-input-new {
    height: 70rpx;
    font-size: 28rpx;
    min-width: 100rpx;
    max-width: 150rpx;
  }
  
  .control-btn-small {
    width: 70rpx;
    height: 70rpx;
    font-size: 36rpx;
  }
  
  .control-buttons {
    flex-direction: column;
    gap: 15rpx;
  }
  
  .status-row {
    margin-bottom: 15rpx;
    padding: 8rpx 0;
  }
  
  .status-label {
    font-size: 24rpx;
    width: 160rpx;
  }
  
  .status-value {
    font-size: 24rpx;
  }
  
  .status-value.motor-state {
    font-size: 22rpx;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .container {
    background-color: #1a1a1a;
  }
  
  .connection-card,
  .control-card,
  .status-card {
    background-color: #2a2a2a;
    color: #fff;
  }
  
  .section-title {
    color: #fff;
  }
  
  .control-label text {
    color: #fff;
  }
  
  .control-input {
    background-color: #333;
    border-color: #555;
    color: #fff;
  }
  
  .device-item {
    background-color: #333;
    border-color: #555;
  }
  
  .device-info .device-name {
    color: #fff;
  }
  
  .device-info .device-id,
  .device-info .device-rssi {
    color: #ccc;
  }
  
  .success-message {
    background-color: #162312;
    border-color: #274916;
    color: #73d13d;
  }
  
  .error-message {
    background-color: #2a1216;
    border-color: #5c2526;
    color: #ff7875;
  }
  
  .reset-btn {
    background-color: #333;
    color: #ccc;
    border-color: #555;
  }
  
  .reset-btn:active {
    background-color: #444;
  }
  
  /* 深色模式下的状态样式 */
  .motor-state.state-0 {
    color: #ff7875; /* 已停止 - 红色 */
  }

  .motor-state.state-1 {
    color: #73d13d; /* 运行中 - 绿色 */
  }

  .motor-state.state-2 {
    color: #ffd666; /* 已暂停 - 黄色 */
  }

  .motor-state.state-3 {
    color: #40a9ff; /* 启动中 - 蓝色 */
  }
  
  /* 兼容旧版本样式 */
  .motor-state.running {
    color: #73d13d;
  }
  
  .motor-state.stopped {
    color: #ff7875;
  }
  
  .countdown {
    color: #40a9ff;
  }
}

/* 状态区域动画效果 */
.control-section,
.status-section {
  animation: fadeIn 0.5s ease-in-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 状态值更新动画 */
.status-value,
.control-value,
.control-status {
  transition: all 0.3s ease;
}

.status-value:hover,
.control-value:hover,
.control-status:hover {
  transform: scale(1.05);
}

/* 滑块动画效果 */
.control-slider {
  transition: all 0.3s ease;
}

.control-slider:active {
  transform: scale(1.02);
}

/* 开关动画效果 */
.system-switch {
  transition: all 0.3s ease;
}

.system-switch:active {
  transform: scale(1.1);
}
