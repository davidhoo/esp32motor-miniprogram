/* 全局样式 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  box-sizing: border-box;
}

.section {
  margin-bottom: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.section-header {
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 卡片样式 */
.connection-card,
.control-card,
.status-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  width: 100%;
  box-sizing: border-box;
}

/* 响应式布局 */
@media (min-width: 768rpx) {
  .container {
    padding: 30rpx;
    max-width: 800rpx;
    margin: 0 auto;
  }
  
  .section {
    margin-bottom: 40rpx;
  }
  
  .connection-card,
  .control-card,
  .status-card {
    padding: 40rpx;
  }
}

@media (min-width: 1024rpx) {
  .container {
    padding: 40rpx;
    max-width: 800rpx;
    margin: 0 auto;
  }
}

@media (max-width: 480rpx) {
  .container {
    padding: 15rpx;
  }
  
  .connection-card,
  .control-card,
  .status-card {
    padding: 20rpx;
  }
  
  .section-title {
    font-size: 30rpx;
  }
}

/* 连接管理区样式 */
.connection-row {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.connection-row .label {
  width: 160rpx;
  font-size: 28rpx;
  color: #666;
  flex-shrink: 0;
}

.connection-row .status {
  font-size: 28rpx;
  font-weight: bold;
}

.connection-row .status.disconnected {
  color: #fa5151;
}

.connection-row .status.connecting {
  color: #ff8f1f;
}

.connection-row .status.connected {
  color: #07c160;
}

.connection-row .status.failed {
  color: #fa5151;
}

.connection-row .device-name {
  font-size: 28rpx;
  color: #333;
}

.button-group {
  margin-top: 30rpx;
}

.connect-btn {
  width: 100%;
  min-width: 100%;
  max-width: 100%;
  font-size: 28rpx;
  padding: 20rpx 0;
  border-radius: 8rpx;
  background-color: #07c160;
  color: white;
  box-sizing: border-box;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.connect-btn.connected {
  background-color: #fa5151;
}

/* 设备列表样式 */
.device-list {
  margin-top: 20rpx;
  border-top: 1rpx solid #eee;
  padding-top: 20rpx;
}

.device-list-header {
  margin-bottom: 15rpx;
  font-size: 26rpx;
  color: #666;
}

.device-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
  background-color: #fafafa;
  transition: all 0.3s ease;
}

.device-item:hover {
  background-color: #f0f0f0;
}

.device-item.active {
  border-color: #07c160;
  background-color: #e6f7ff;
}

.device-info {
  flex: 1;
}

.device-info .device-name {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.device-info .device-id,
.device-info .device-rssi {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 2rpx;
}

.device-connect-icon {
  font-size: 32rpx;
  color: #07c160;
  font-weight: bold;
}

/* 成功提示样式 */
.success-message {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #f6ffed;
  border: 1rpx solid #b7eb8f;
  border-radius: 8rpx;
  color: #52c41a;
  font-size: 28rpx;
  text-align: center;
}

/* 错误提示样式 */
.error-message {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #fee;
  border: 1rpx solid #fcc;
  border-radius: 8rpx;
  color: #c33;
  font-size: 28rpx;
  text-align: center;
}

.retry-status {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #e3f2fd;
  border: 1rpx solid #90caf9;
  border-radius: 8rpx;
  color: #1976d2;
  font-size: 28rpx;
  text-align: center;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% {
    opacity: 1;
  }
  50% {
    opacity: 0.7;
  }
  100% {
    opacity: 1;
  }
}

/* 禁用状态样式 */
button[disabled] {
  opacity: 0.6;
}

/* 电机控制区样式 */
.control-section {
  margin-top: 20rpx;
}

.control-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  width: 100%;
  box-sizing: border-box;
}

.control-item {
  margin-bottom: 40rpx;
}

.control-item:last-child {
  margin-bottom: 30rpx;
}

.control-label {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.control-label text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.control-label .control-value {
  font-size: 28rpx;
  color: #07c160;
  font-weight: bold;
}

.control-label .control-status {
  font-size: 28rpx;
  color: #fa541c;
  font-weight: bold;
}

.control-content {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

/* 新的输入组样式 */
.input-group {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  width: 100%;
}

/* 新的输入框样式 */
.control-input-new {
  flex: 1;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  text-align: center;
  font-size: 32rpx;
  background-color: #fff;
  color: #333;
  min-width: 120rpx;
  max-width: 200rpx;
  font-weight: bold;
}

/* 小按钮样式 */
.control-btn-small {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  font-size: 40rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #e0e0e0;
  background-color: #f8f9fa;
  color: #333;
  padding: 0;
  margin: 0;
  transition: all 0.3s ease;
}

/* 增加按钮样式 */
.increase-btn {
  background-color: #07c160;
  color: white;
  border-color: #07c160;
}

.increase-btn:active {
  background-color: #059a4c;
  transform: scale(0.95);
}

.increase-btn:disabled {
  background-color: #e0e0e0;
  color: #999;
  border-color: #e0e0e0;
}

/* 减少按钮样式 */
.decrease-btn {
  background-color: #ff4757;
  color: white;
  border-color: #ff4757;
}

.decrease-btn:active {
  background-color: #e03e4a;
  transform: scale(0.95);
}

.decrease-btn:disabled {
  background-color: #e0e0e0;
  color: #999;
  border-color: #e0e0e0;
}

/* 保留旧的输入框样式以防兼容性问题 */
.control-input {
  width: 120rpx;
  height: 60rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
}

.control-slider {
  flex: 1;
  margin: 0;
}

.switch-container {
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
}

.system-switch {
  transform: scale(1.2);
}

/* 控制按钮组 */
.control-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.control-btn {
  flex: 1;
  font-size: 28rpx;
  padding: 20rpx 0;
  border-radius: 8rpx;
  border: none;
  text-align: center;
  transition: all 0.3s ease;
}

.apply-btn {
  background-color: #07c160;
  color: white;
}

.apply-btn:active {
  background-color: #059a4c;
}

/* 恢复默认按钮样式已删除 */

.control-btn[disabled] {
  opacity: 0.5;
  cursor: not-allowed;
}

/* 系统状态区样式 */
.status-section {
  margin-top: 20rpx;
}

.status-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 10rpx 0;
}

.status-row:last-child {
  margin-bottom: 0;
}

.status-label {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
  flex-shrink: 0;
  width: 180rpx;
  white-space: nowrap;
}

.status-value {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  text-align: right;
  flex: 1;
  word-break: keep-all;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 电机状态特殊处理 */
.status-value.motor-state {
  font-size: 26rpx;
  line-height: 1.2;
}

/* 电机状态特殊样式 - 基于状态码 */
.motor-state.state-0 {
  color: #fa541c; /* 已停止 - 红色 */
}

.motor-state.state-1 {
  color: #52c41a; /* 运行中 - 绿色 */
}

.motor-state.state-2 {
  color: #faad14; /* 已暂停 - 黄色 */
}

.motor-state.state-3 {
  color: #1890ff; /* 启动中 - 蓝色 */
}

/* 兼容旧版本样式 */
.motor-state.running {
  color: #52c41a;
}

.motor-state.stopped {
  color: #fa541c;
}

/* 倒计时特殊样式 */
.countdown {
  color: #1890ff;
  font-family: 'Courier New', monospace;
}

