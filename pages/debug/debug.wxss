.box {
  padding: 20rpx;
}

.button-group {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.button-group button {
  flex: 1;
  font-size: 28rpx;
}

.status {
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.status-text {
  font-size: 28rpx;
  font-weight: bold;
}

.log {
  height: 60vh;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  padding: 20rpx;
  background-color: #fafafa;
}

.log-text {
  white-space: pre-wrap;
  font-family: monospace;
  font-size: 24rpx;
  line-height: 1.4;
  color: #333;
}
